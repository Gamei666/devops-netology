[webservers]
%{~ for i in webservers ~}

${i["name"]}   ansible_host=${i["network_interface"][0]["nat_ip_address"]}
${i["name"]}   ansible_host=${i["fqdn"]}  
%{~ endfor ~}

[databases]

%{~ for i in databases ~}

${i["name"]}   ansible_host=${i["network_interface"][0]["nat_ip_address"]}
${i["name"]}   ansible_host=${i["fqdn"]} 
%{~ endfor ~}

[storages]
${storages["name"]} ansible_host=${storages["network_interface"][0]["nat_ip_address"]}
${storages["name"]} ansible_host=${storages["fqdn"]}

